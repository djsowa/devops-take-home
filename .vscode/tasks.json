{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/backend/app/devops-app-api.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Start FrontEnd",
            "command": "xdg-open",
            "type": "process",
            "args": [
                "file://${workspaceFolder}/src/frontend/index.html"
            ],
            "problemMatcher": []
        }
    ]
}